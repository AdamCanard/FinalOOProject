<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OOProject.Views.MainPage"
             Title="MainPage">
    <ScrollView>
        <VerticalStackLayout BackgroundColor="#FBF9F1">
            <Grid>
                <Image Source="main_image.png"/>
            </Grid>

            <BoxView HeightRequest="60" BackgroundColor="Transparent"/>

            <Label
            Text="Please Log In"
            FontAttributes="Bold"
            FontSize="35"
            HorizontalOptions="Center"
            VerticalOptions="Center"/>

            <BoxView HeightRequest="40" BackgroundColor="Transparent"/>

            <Button
            x:Name="CounterBtn"
            Text="Login" 
            SemanticProperties.Hint="Goes to Login Page"
            Clicked="CounterBtn_Clicked"
            WidthRequest="200"
            HeightRequest="200"
            HorizontalOptions="Center"
            VerticalOptions="Center"
            BackgroundColor="#D9D9D9"
            TextColor="Black"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>